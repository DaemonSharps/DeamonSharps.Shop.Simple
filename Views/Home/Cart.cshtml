@{
    ViewData["Title"] = "Корзина";
}
@model List<ProductViewModel>;
<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Продукт</th>
                    <th>Цена</th> 
                </tr>
            </thead>

            @if (Model != null)
            {
                <tbody>
                    @foreach (var prod in Model)
                    {
                        <tr>
                            <th>@prod.Name</th>
                            <th>@prod.Price</th>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th class="text-right">Цена</th>
                        <th>@Model.Select(p => p.Price).Sum()</th>
                    </tr>
                </tfoot>
            }



        </table>
        <button class="btn btn-outline-success">Подтвердить</button>
    </div>
   
</div>